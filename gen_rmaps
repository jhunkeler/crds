#! /usr/bin/env pysh
#-*-python-*-

if len(sys.argv) == 1:
    from crds.hst import INSTRUMENTS
else:
    INSTRUMENTS = sys.argv[1:]

def install():
    print "Installing"  
    % ../CRDS/install 

install()

for instr in INSTRUMENTS:
    % python gen_rmap.py ${instr}
    % mv hst_${instr}_*.rmap ../CRDS/hst/mappings/hst

install()
