#! /usr/bin/env pysh
#-*-python-*-

if len(sys.argv) == 1:
    from crds.hst import INSTRUMENTS
else:
    INSTRUMENTS = sys.argv[1:]

def install():
    print "Installing"  
    % ../../install >& /dev/null

install()

for instr in INSTRUMENTS:
    % python gen_rmap2.py ${instr}
    % mv hst_${instr}_*.rmap ../mappings/hst

install()
